<h1>Card</h1>
<div id="card">
{{#if courses.length}}
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Number</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>

        {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button
                            class="btn btn-small js-remove blue darken-3"
                            data-id="{{_id}}"
                            data-csrf="{{@root.csrf}}"
                    >
                        Delete</button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <p><strong>Price:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn blue darken-3"> Order </button>
    </form>


{{else}}
    <p>card is empty</p>
{{/if}}
</div>