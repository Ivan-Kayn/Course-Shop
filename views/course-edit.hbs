<h1>Edit {{course.title}}</h1>

{{#if error}}
    <p class="alert"> {{error}} </p>
{{/if}}


<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="write course name"></span>

    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="write price"></span>

    </div>

    <div class="input-field">
        <input id="img" name="image" type="text" class="validate" required value="{{course.image}}">
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="write image url"></span>

    </div>

    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn btn-primary blue darken-3"> Edit course </button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{ course._id }}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn red darken-3">Delete course</button>
</form>