<h1 class="center">Courses</h1>
{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-image">
                        <img src="{{image}}" alt="{{title}}">

                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>

                    <div class="card-action actions">
                        <a target="_blank" href="/courses/{{_id}}">Open course</a>
                        {{#if @root.isAuth}}

                            {{#ifeq userId._id @root.userId}}
                                <a href="/courses/{{_id}}/edit?allow=true">edit</a>
                            {{/ifeq}}

                            <form action="/card/add" method="POST">
                                <input type="hidden" name="id" value="{{_id}}">

                                <input type="hidden" name="_csrf" value="{{@root.csrf}}">

                                <button type="submit" class="btn btn-primary blue darken-3">Buy</button>
                            </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>No courses yet.</p>
{{/if}}